<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="content">Question</label>
      {{input value=content id="content" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{textarea rows=3 value=notes id="notes" class="form-control"}}
    </div>
    
    <div class="form-group">
      <label for="username">Username</label>
      {{input value=username id="username" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" class="form-control"}}
    </div>
    <button class="btn btn-default" {{action 'saveQuestion'}}>Save</button>
  </form>
</div>