<h2>New Answer</h2>
<div>
  <form>
    <div class="form-group">
      <label for="content">Answer</label>
      {{textarea rows=3 value=content id="content" class="form-control"}}
    </div>
    
    <div class="form-group">
      <label for="username">Username</label>
      {{input value=username id="username" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input type="date" value=date id="date" class="form-control"}}
    </div>
    <button class="btn btn-default" {{action 'saveAnswer'}}>Save</button>
  </form>
</div>